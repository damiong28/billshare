<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h1 class="text-center"><%= @user.name %></h1>
            <%= link_to "Edit User Info", edit_user_url, class: "btn btn-primary" %>
            <table class="table table-hover">
                <thead>
                  <tr class="text-center">
                    <th>Month</th>
                    <th>Data Used</th>
                    <th>Amount Due</th>
                    <th>Status</th>
                  </tr>
                </thead>
                <tbody>
                  <% if @user.charges.present? %>
                    <%= render @user.charges %>
                  <% end %>
                </tbody>
              </table>
        </div>
    </div>
</div>