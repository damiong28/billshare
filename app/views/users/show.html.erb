<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <h1 class="text-center"><%= @user.name %></h1>
          <%= link_to "Edit User Info", edit_user_url, 
              class: "btn btn-primary" %>
          <%= link_to "Delete User", @user, method: :delete, 
              class: "btn btn-danger pull-right", 
              data: { confirm: "Delete #{@user.name}?" } %>
          
          <% if @user.charges.present? %>
            <table class="table table-hover">
              <thead>
                <tr class="text-center">
                  <th>Month</th>
                  <th>Data Used</th>
                  <th>Amount Due</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                <%= render @user.charges %>
              </tbody>
            </table>
          <% else %>
            <p><br/>You haven't entered any charges for this user yet.</p>
          <% end %>
        </div>
    </div>
</div>