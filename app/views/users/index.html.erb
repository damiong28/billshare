<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h1 class="text-center">Users Dashboard</h1>
            <%= link_to "New User", new_user_url, class: "btn btn-primary" %>
            <% if @users.present? %>
              <table class="table table-hover">
                <thead>
                  <tr class="text-center">
                    <th>Name</th>
                    <th>Balance</th>
                    <th>Email</th>
                  </tr>
                </thead>
                <tbody>
                  <%= render @users %>
                </tbody>
              </table>
            <% else %>
              <p><br>You haven't entered any users yet.</p>
            <% end %>
        </div>
    </div>
</div>