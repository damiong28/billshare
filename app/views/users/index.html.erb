<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h1 class="text-center">Users Index</h1>
            <%= link_to "New User", new_user_url, class: "btn btn-primary" %>
            <table class="table table-hover">
                <thead>
                  <tr class="text-center">
                    <th>Name</th>
                    <th>Balance</th>
                    <th>Email</th>
                  </tr>
                </thead>
                <tbody>
                  <% if @users.present? %>
                    <%= render @users %>
                  <% end %>
                </tbody>
              </table>
        </div>
    </div>
</div>