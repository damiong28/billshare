<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1 class="text-center">New Bill</h1>
      <%= form_for @bill do |f| %>
        <%= render 'shared/form_errors', item: @bill %>
        <div class="form-group">
          <%= f.label "Date from Bill:" %>
          <%= f.date_select(:bill_date) %>
        </div>
        <div class="form-group">
          <%= f.label "Total amount of Bill:" %>
          <%= f.text_field :bill_amount, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "Total amount of Data used:" %>
          <%= f.text_field :total_data, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "Total cost for Data:" %>
          <%= f.text_field :data_cost, class: "form-control" %>
        </div>
        <%= f.hidden_field :account_id, :value => current_account.id %>
        <%= f.submit "Start Bill", class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>